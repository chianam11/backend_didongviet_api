<%- include('../alerts/alerts.ejs') %>

<div class="bg-white rounded-xl shadow-xl overflow-x-auto max-h-[50rem] w-full p-6">
  <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
    Thêm nhà cung cấp mới
  </h2>
  <form class="space-y-5" method="post">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Tên nhà cung cấp:
      </label>
      <input type="text" name="name"
        class="w-full rounded-lg border border-gray-300 shadow-sm p-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
        placeholder="Nhập tên nhà cung cấp" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Mô tả:
      </label>
      <input type="text" name="description"
        class="w-full rounded-lg border border-gray-300 shadow-sm p-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
        placeholder="Nhập mô tả" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Ảnh đại diện:
      </label>
      <div
        class="mt-2 flex flex-col items-center justify-center px-6 py-4 border-2 border-gray-300 border-dashed rounded-lg">
        <img src="data:image/jpeg;base64,/9j/4AAQSkZJ..." alt=""
          class="w-32 h-32 object-cover rounded-full mb-4">
        <label
          class="relative cursor-pointer bg-blue-500 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-600">
          <span>Upload a file</span>
          <input id="file-upload" name="Logo_url" type="file" class="sr-only" accept="image/*" />
        </label>
        <p class="text-xs text-gray-500 mt-2">PNG, JPG, GIF up to 10MB</p>
      </div>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">
        Link website:
      </label>
      <input type="text" name="website_url"
        class="w-full rounded-lg border border-gray-300 shadow-sm p-3 focus:border-blue-500 focus:ring-2 focus:ring-blue-400"
        placeholder="Nhập link website" />
    </div>
    <button type="submit"
      class="w-full bg-blue-500 text-white font-semibold py-3 px-4 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
      Thêm nhà cung cấp
    </button>
  </form>
</div>
