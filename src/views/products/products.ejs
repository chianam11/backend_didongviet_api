<%- include ../alerts/alerts.ejs %>

<div class="mx-auto px-4 py-8">
 
  

      <div class="container mx-auto px-4 "> 
       
          <div class="mb-8 flex justify-between items-center">
              <h2 class="text-2xl font-bold text-gray-800">Product Listing</h2>
  
              <div class="relative w-64">
                  <input type="text" placeholder="Search products..."
                      class="pl-10 pr-4 py-2 w-full border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
              </div>
          </div>
  
          <div class="overflow-x-auto bg-white rounded-lg shadow">
            <table class="min-w-full table-fixed border-collapse divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="w-12 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">STT</th>
                        <th class="w-16 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image</th>
                        <th class="w-1/4 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
                        <th class="w-1/6 px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Category</th>
                        <th class="w-1/6 px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Price</th>
                        <th class="w-1/6 px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                        <th class="w-1/6 px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <% products.forEach(({id, name, description, price, stock, product_image, category_id, brand_id}, index) => { %>
                        <tr class="hover:bg-gray-50 transition-colors duration-200">
                            <td class="px-6 py-4 text-sm text-gray-500 align-middle text-center"><%= index + 1 %></td>
                            <td class="px-6 py-4 align-middle">
                                <img src="/images/products/<%= product_image %>" alt="<%= name %>" class="h-12 w-12 rounded-lg object-cover">
                            </td>
                            <td class="px-6 py-4 text-sm font-medium text-gray-900 truncate max-w-xs align-middle"><%= name %></td>
                            <td class="px-6 py-4 align-middle">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-indigo-100 text-indigo-800"><%= category_id %></span>
                            </td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500 align-middle">
                                <%= price.toLocaleString('vi-VN', { style: 'currency', currency: 'VND' }) %>
                            </td>
                            <td class="px-6 py-4 text-right text-sm text-gray-500 align-middle"><%= stock %></td>
                            <td class="px-6 py-4 text-center text-sm font-medium align-middle">
                                <a href="/admin/v1/products/edit/<%= id %>" class="text-indigo-600 hover:text-indigo-900 mr-4">‚úèÔ∏è Edit</a>
                                <form action="/admin/v1/products/<%= id %>?_method=DELETE" method="POST" onsubmit="return confirmDelete()">
                                    <button type="submit" class="text-red-600 hover:text-red-900">üóëÔ∏è Delete</button>
                                </form>
                                
                                <script>
                                  function confirmDelete() {
                                    return confirm("B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën x√≥a s·∫£n ph·∫©m n√†y?");
                                  }
                                </script>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
                
            </table>
        </div>
        
      </div>

  

</div>
