                          <th class="border border-gray-300 px-4 py-2 text-center">Chỉnh Sửa</th>
                          <th class="border border-gray-300 px-4 py-2 text-center">Xóa</th>
                      </tr>
                  </thead>
                  <tbody>
                    <% roles.forEach((role, index) => { %>
                      <tr class="hover:bg-gray-100">
