<div class="flex items-center justify-center space-x-2 mt-4">
    <span class="text-gray-700">Page</span>

    <!-- Ô nhập số trang -->
    <input 
        type="number" 
        min="1" 
        max="10" 
        value="1" 
        class="w-16 text-center border rounded-lg px-2 py-1 focus:ring-2 focus:ring-blue-500"
        id="pageInput"
    />

    <span class="text-gray-700">of 10</span>

    <!-- Nút Go -->
    <button 
        class="px-4 py-2 border rounded-lg bg-blue-500 text-white hover:bg-blue-600 transition"
        onclick="goToPage()">
        Go
    </button>
</div>

<script>
    function goToPage() {
        let page = document.getElementById('pageInput').value;
        if (page >= 1 && page <= 10) {
            window.location.href = "?page=" + page;
        } else {
            alert("Please enter a valid page number between 1 and 10.");
        }
    }
</script>
